{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		// "lib": ["ES2021"],
		"esModuleInterop": true,
		"moduleResolution": "NodeNext",
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"baseUrl": "./",
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "**/*.test.ts"]
}
